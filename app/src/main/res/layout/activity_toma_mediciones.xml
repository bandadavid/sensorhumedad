<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cinq"
    tools:context=".TomaMedicionesActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toma de Mediciones"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:gravity="center_horizontal"
                android:background="#EDF3F3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="Id"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lugar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="Salache"
                    android:textAlignment="center" />

            </LinearLayout>
            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempertura °C"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="#000000">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 3" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/body1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tem1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/tem2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tem3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/obtener1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Obtener"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/calcular1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Calcular"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humedad %"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="#000000">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 3" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/body2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/hu1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/hu2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                    <TextView
                        android:id="@+id/hu3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action2"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/obtener2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Obtener"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>
                    <Button
                        android:id="@+id/calcular2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Calcular"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ph"
                android:textColor="#F4F4F4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="#000000">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Medicion 3" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/body3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/ph1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/ph2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                    <TextView
                        android:id="@+id/ph3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action3"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/obtener3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Obtener"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>
                    <Button
                        android:id="@+id/calcular3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:text="Calcular"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultados"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="#000000">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Temperatura"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Humedad" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:text="Ph" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/body4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/re1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/re2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                    <TextView
                        android:id="@+id/re3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Suelo"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/guardar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="#000000"
                        android:text="Guardar"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>